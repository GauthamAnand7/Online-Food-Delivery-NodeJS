
<html>

        <head>
      
          <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
          <meta name="description" content="">
          <meta name="author" content="">
          <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">
      
          <title>Restaurant menu</title>
      
          <!-- Bootstrap core CSS -->
          <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      
      
          <link rel="stylesheet" href="assets/css/fontawesome.css">
          <link rel="stylesheet" href="assets/css/templatemo-style.css">
          <link rel="stylesheet" href="assets/css/owl.css">
      
        </head>
      
      <body class="is-preload">
      
          <!-- Wrapper -->
          <div id="wrapper">
      
            <!-- Main -->
              <div id="main">
                <div class="inner">
      
                  <!-- Header -->
                  <header id="header">
                    <div class="logo">
                      <a href="index.ejs"></a>
                    </div>
                  </header>
      
                  <!-- Page Heading -->
                  <div class="page-heading">
                  
                    <div class="container-fluid">
                      <div class="row">
                        <div class="col-md-12">
      
                        
                          <p><strong>Statistics</strong></p>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <!-- Tables -->
                  <section class="tables">
                    <div class="container-fluid">
                      <div class="row">
                        <div class="col-md-12">
                          <div class="section-heading">
                            <h2>Orders</h2>
                          </div>
                          <div class="default-table">
                            <table>
                                <thead>
                                    <tr>
                                      <th>Product no.</th>
                                      <th>Name</th>
                                      <th>Quant</th>
                                      <th>Price</th>
                                    </tr>
                                  </thead>
                                  <div></div>
                                  <tbody>
                                      <% var total_orders=0,total_price = 0;%>
                                    <%for(var i=0;i < res.length;i++){%>
                                      
                                    <tr>
                                      <td><%=res[i].product_id%></td>
                                      <td><%=res[i].p_name%></td>
                                      <td><%=res[i].quant%></td>
                                      <td><%=res[i].price%></td>
                                    </tr>
                                    <% total_orders = total_orders + res[i].quant;
                                       total_price = total_price + res[i].price;}%>
                                       <tr>
                                           <th>TOTAL</th>
                                           <th></th>
                                           <th><%=total_orders%></th>
                                           <th><%=total_price%></th>
                                       </tr>
                                  </tbody>
                            </table>
                          </div>
                        </div>
                      </div>
                    </div>
                  </section>
      
      
                </div>
              </div>
      
            <!-- Sidebar -->
              <div id="sidebar">
      
                <div class="inner">
      
                  <!-- Search Box -->
                  <section id="search" class="alt">
                    <form method="get" action="#">
                      <input type="text" name="search" id="search" placeholder="Search..." />
                    </form>
                  </section>
                    
                  <!-- Menu -->
                 <nav id="menu">
                    <ul>
                        <li><form action="/res_home" id="formosubmit" method="post" onclick="document.getElementById('formosubmit').submit()">Home</form></li>
                      <li><a href="res_update.ejs">Update details</a></li>
                      <li><form action="/res_loadmenu" id="formsubmit" method="post" onclick="autosubmit()">Menu</form></li>
                      <li><form action="/res_blog" id="formbsubmit" method="get" onclick="document.getElementById('formbsubmit').submit()">Blog</form></li>
                    </ul>
                  </nav>
      
                
                  <!-- Footer -->
                  <footer id="footer">
                  </footer>
                  
                </div>
              </div>
      
          </div>
      
        <!-- Scripts -->
        <!-- Bootstrap core JavaScript -->
          <script src="vendor/jquery/jquery.min.js"></script>
          <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      
          <script src="assets/js/browser.min.js"></script>
          <script src="assets/js/breakpoints.min.js"></script>
          <script src="assets/js/transition.js"></script>
          <script src="assets/js/owl-carousel.js"></script>
          <script src="assets/js/custom.js"></script>
          <script>
          function autosubmit(){
            var frm = document.getElementById("formsubmit");
            frm.submit();
          }
        </script>
                  
      </body>
      </html>
      